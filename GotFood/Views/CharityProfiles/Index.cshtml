@model IEnumerable<GotFood.Models.CharityProfile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CharityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MissionStatement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdditionalContactInfo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenFoodRequest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProvideTransport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharityNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CharityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MissionStatement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactPosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdditionalContactInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenFoodRequest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProvideTransport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CharityNum)
            </td>
            <td>
                <a href="http://@item.Website" target="_blank">@item.Website</a>
                @*@Html.ActionLink(item.Website, item.Website, new { id = item.Website })*@
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CharityID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CharityID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CharityID })
            </td>
        </tr>
    }

</table>

<div>
        @using (Html.BeginForm("Index", "CharityProfiles", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <span>Select File:</span>
            <input type="file" name="postedFile" />
            <hr />
            <input type="submit" value="Upload" />
            <br />
            @*<span style="color:green">@ViewBag.Message</span>*@
        }
    </div>